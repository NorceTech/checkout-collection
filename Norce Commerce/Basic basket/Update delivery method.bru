meta {
  name: Update delivery method
  type: http
  seq: 5
}

post {
  url: {{commerceShoppingServiceUrl}}/UpdateDeliveryMethod?deliveryMethodId=128&basketId={{basketId}}
  body: none
  auth: bearer
}

params:query {
  deliveryMethodId: 128
  basketId: {{basketId}}
}

headers {
  Content-Type: application/json
  applicationId: {{commerceApplicationId}}
}

auth:bearer {
  token: {{commerce_token}}
}

body:json {
  {
    "Email": "kalle@anka.se",
    "FirstName": "Kalle",
    "LastName": "Anka",
    "CellPhone": "555-1234",
    "InvoiceAddress": {
      "Line1": "Ankeborgsgatan 27",
      "Zip": "123 45",
      "City": "Ankeborg",
      "CountryId": 1
    },
    "UseInvoiceAddressAsDeliveryAddress": true
  }
}

assert {
  res.status: eq 200
  res('Basket.Id'): eq {{basketId}}
}
